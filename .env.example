# Linear API Configuration
LINEAR_API_KEY=your-linear-api-key-here
LINEAR_WORKSPACE_ID=your-workspace-id-here
# Your Linear user identity (for filtering "my issues")
LINEAR_USER_EMAIL=your-email@company.com
LINEAR_USER_NAME=Your Name

# Anthropic API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here
# send_only (default) or interactive (bidirectional)
TELEGRAM_MODE=send_only

# Conversation Configuration (for interactive mode)
# Enable intelligent conversation responses (true/false)
CONVERSATION_ENABLED=true
# Number of messages to keep in conversation history
CONVERSATION_MAX_HISTORY=50
# Days of issue history to include in context
CONVERSATION_CONTEXT_DAYS=30

# OpenAI API Configuration (required for mem0 embeddings)
OPENAI_API_KEY=your-openai-api-key-here

# mem0 Configuration (optional if using hosted mem0)
MEM0_API_KEY=your-mem0-api-key-here

# Scheduling Configuration
LOCAL_TIMEZONE=Europe/Prague
BRIEFING_TIME=09:00

# Storage Configuration (all storage in one place)
DATABASE_PATH=~/.linear_chief/state.db
CHROMADB_PATH=~/.linear_chief/chromadb
MEM0_PATH=~/.linear_chief/mem0
LOGS_PATH=~/.linear_chief/logs

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Cache Configuration
# How long to cache issue details before refetching (hours)
CACHE_TTL_HOURS=1

# Cost Tracking
MONTHLY_BUDGET_USD=20.0

# Disable tokenizers parallelism warning (prevents fork warnings)
TOKENIZERS_PARALLELISM=false

# Logging Configuration
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# json (production) or console (development)
LOG_FORMAT=console
# Leave empty for console-only logging
LOG_FILE=
